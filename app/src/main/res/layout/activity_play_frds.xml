<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playFrds"
    android:background="@drawable/play_frd_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">

        <TextView
            android:id="@+id/pl1score"
            android:layout_width="351dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Player 1 : 0"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/pl2score"
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="Player 2 : 0"
            android:textAlignment="center"
            android:textSize="25dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/turn1"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="481dp"
        android:layout_marginRight="481dp"
        android:layout_marginBottom="179dp"
        android:text="player 1 trun...!"
        android:textSize="20dp"
        android:visibility="invisible"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/dice"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="256dp"
        android:layout_marginLeft="256dp"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp"
        android:layout_marginBottom="124dp"
        android:src="@drawable/dice3d160" />

    <TextView
        android:id="@+id/turn2"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="497dp"
        android:layout_marginLeft="497dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="175dp"
        android:text="Player 2 turn..!"
        android:textSize="20dp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bt2"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="424dp"
                android:layout_marginLeft="424dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="53dp"
                android:layout_marginBottom="24dp"
                android:text="player 2" />

            <Button
                android:id="@+id/bt1"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="51dp"
                android:layout_marginLeft="51dp"
                android:layout_marginEnd="420dp"
                android:layout_marginRight="420dp"
                android:layout_marginBottom="24dp"
                android:text="player 1" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>